{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "@components/*": ["src/app/components/*"],
      "@shared/*": ["src/app/shared/*"]
    },
    "types": [],
    "target": "ES2017"
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.module.ts", "src/**/*.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
