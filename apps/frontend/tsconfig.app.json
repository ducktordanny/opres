{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "@components/*": ["app/components/*"],
      "@shared/*": ["app/shared/*"]
    },
    "types": [],
    "target": "ES2017"
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
